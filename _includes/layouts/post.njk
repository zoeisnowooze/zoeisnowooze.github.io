---
layout: layouts/base.njk
templateClass: tmpl-post
---
<article class="h-entry">
  <h1 class="p-name">{{ title }}</h1>

  <time class="dt-published" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>

  <span class="p-author h-card hidden">
    <a class="p-name u-url" rel="author me" href="https://blorp.dev/">Zoé Cassiopée Gauthier</a>
    <a class="u-photo" href="{{ '/img/avatar.webp' | htmlBaseUrl }}"></a>
    <span class="p-pronouns">
      <span class="p-pronoun-nominative">she</span> / <span class="p-pronoun-oblique">her</span>
    </span>
  </span>

  <div class="e-content">
    {{ content | safe }}
  </div>

  {%- if collections.posts %}
  {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
  {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
  {%- if nextPost or previousPost %}
  <hr>
  <ul>
    {%- if nextPost %}<li>Next: <a href="{{ nextPost.url | url }}" rel="prev">{{ nextPost.data.title }}</a></li>{% endif %}
    {%- if previousPost %}<li>Previous: <a href="{{ previousPost.url | url }}" rel="next">{{ previousPost.data.title }}</a></li>{% endif %}
  </ul>
  {%- endif %}
  {%- endif %}
</article>
